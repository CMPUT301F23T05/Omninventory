<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="gray_text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="item_details_text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="item_edit_textinputlayout" parent="Widget.Design.TextInputLayout">
        <item name="errorTextAppearance">@style/error_text_appearance</item>
        <item name="hintTextAppearance">@style/hint_text_appearance</item>
    </style>

    <style name="item_edit_edittext" parent="Theme.AppCompat.Light">
        <!-- Inactive underline color-->
        <item name="colorControlNormal">@color/gray_banner</item>

        <!-- Cursor and Active underline color, uses colorAccent by default if not defined-->
        <item name="colorControlActivated">@color/blue_banner</item>
    </style>

    <style name="hint_text_appearance" parent="TextAppearance.Design.Hint">
        <!-- Inactive and Active label color, pointing to a selector-->
        <item name="android:textColor">@color/blue_banner</item>
    </style>

    <style name="error_text_appearance" parent="TextAppearance.Design.Error">
        <!-- Error text color-->
        <item name="android:textColor">@color/salmon_banner</item>
    </style>

    <style name="blue_button" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/blue_banner</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
        <item name="cornerRadius">20dp</item>
    </style>
<!--    https://www.ekchang.com/tutorial/2018/03/25/styling_textinputlayout.html -->

</resources>