<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/taskbar_band"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="@drawable/color_primary_draw" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/color_secondary_draw"
        android:orientation="horizontal">

        <!-- to keep spacing consistent with layout_weight -->
        <LinearLayout
            android:id="@+id/spacer1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="horizontal"/>

<!--        Ideally should change this to id=save_button, but for compatibility leave -->
        <ImageButton style="@style/taskbar_button"
            android:id="@+id/back_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/save_button_label"
            android:src="@drawable/icon_save" />

        <!-- to keep spacing consistent with layout_weight -->
        <LinearLayout
            android:id="@+id/spacer2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="horizontal"/>

    </LinearLayout>

</LinearLayout>
